<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:id="@+id/board"
        android:layout_height="0dp"
        android:layout_width="match_parent"

        android:layout_weight="0.9"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <LinearLayout
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".33"
                android:orientation="horizontal">
                <ImageSwitcher
                    android:id="@+id/tile1"
                    android:layout_height="match_parent"
                    android:layout_width="@dimen/tile_width"
                    android:layout_weight=".33"
                    tools:ignore="NestedWeights" />
                <ImageSwitcher
                    android:id="@+id/tile2"
                    android:layout_width="@dimen/tile_width"
                    android:layout_height="match_parent"
                    android:layout_weight=".33"

                     />
                <ImageSwitcher
                    android:id="@+id/tile3"
                    android:layout_width="@dimen/tile_width"
                    android:layout_height="match_parent"
                    android:layout_weight=".33"
                     />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/line2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".33"
                android:orientation="horizontal">
                <ImageSwitcher
                    android:id="@+id/tile4"
                    android:layout_width="@dimen/tile_width"
                    android:layout_height="match_parent"
                    android:layout_weight=".33"
                    tools:ignore="NestedWeights" />
                <ImageSwitcher
                    android:id="@+id/tile5"
                    android:layout_width="@dimen/tile_width"
                    android:layout_height="match_parent"
                    android:layout_weight=".33"
                     />
                <ImageSwitcher
                    android:id="@+id/tile6"
                    android:layout_width="@dimen/tile_width"
                    android:layout_height="match_parent"
                    android:layout_weight=".33"
                     />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/line3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".33"
                android:orientation="horizontal">

                <ImageSwitcher
                    android:id="@+id/tile7"
                    android:layout_width="@dimen/tile_width"
                    android:layout_height="match_parent"
                    android:layout_weight=".33"
                    tools:ignore="NestedWeights" />

                <ImageSwitcher
                    android:id="@+id/tile8"
                    android:layout_width="@dimen/tile_width"
                    android:layout_height="match_parent"
                    android:layout_weight=".33" />

                <ImageSwitcher
                    android:id="@+id/tile9"
                    android:layout_width="@dimen/tile_width"
                    android:layout_height="match_parent"
                    android:layout_weight=".33" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/stats"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        >

        <TextView
            android:id="@+id/moves_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/moves_text_initial"
            android:textSize="@dimen/move_text_size"
            android:textColor="@color/black"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
</LinearLayout>
